{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "./dist/renderer",
    "rootDir": ".",
    "moduleResolution": "node",
    "noEmit": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["renderer/src/*"],
      "@renderer/*": ["renderer/src/*"],
      "@shared/*": ["shared/*"],
      "@main/*": ["main/*"],
      "@components/*": ["renderer/src/components/*"],
      "@icons": ["renderer/src/components/icons"],
      "@icons/*": ["renderer/src/components/icons/*"]
    }
  },
  "include": ["renderer/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "main"]
}
